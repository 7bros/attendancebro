<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login2.reset_passFragment"
    android:orientation="vertical"
    android:background="@drawable/backofsmit">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
android:id="@+id/lockimg"
    android:background="@drawable/lock"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"/>



    <EditText
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etnewpass"
        android:hint="Enter New password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/lockimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etnewconfirmpass"/>
    <EditText
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/etnewconfirmpass"
        android:layout_marginTop="20dp"
        android:hint="Enter confirm password"
        app:layout_constraintTop_toBottomOf="@+id/etnewpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <Button
        android:background="@drawable/btn_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/btnconfirm"
        app:layout_constraintTop_toBottomOf="@+id/etnewconfirmpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginBottom="200dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

