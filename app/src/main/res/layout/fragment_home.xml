<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.takeAttendace.takeAttendanceFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date:"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="80dp"

        android:id="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndate"
        android:drawableLeft="@drawable/calender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        android:text="Select date "
        app:layout_constraintTop_toTopOf="parent"






        />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attendence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        />

    <Spinner
        android:id="@+id/spinner_sub"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:layout_margin="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:entries="@array/subjects"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <Spinner
        android:id="@+id/spinner_cls"
        android:layout_width="315dp"
        android:layout_height="0dp"
        android:layout_margin="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:entries="@array/classes"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_sub" />

</androidx.constraintlayout.widget.ConstraintLayout>