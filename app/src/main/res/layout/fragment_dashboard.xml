<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashBoard.dashboard"
    android:orientation="vertical"
    android:background="@drawable/pagebkg">


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:layout_marginStart="60dp"
            android:id="@+id/txtname"
            android:layout_marginBottom="108dp"
            android:background="@color/white"
            android:text="Hello name"

            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button1"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:background="@drawable/cust_edittext"
            android:drawableTop="@drawable/registration"
            android:text="Take Attendence"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginBottom="290dp"
            android:background="@drawable/cust_edittext"
            android:drawableTop="@drawable/baseline_person_add_alt_24"
            android:text="student List"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toTopOf="parent"
          />

        <Button
            android:id="@+id/button3"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginBottom="190dp"
            android:background="@drawable/cust_edittext"
            android:drawableTop="@drawable/history"
            android:text="Attedence History"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button4"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1"
        />

        <Button
            android:id="@+id/button4"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginBottom="190dp"
            android:background="@drawable/cust_edittext"
            android:drawableTop="@drawable/registration"
            android:text="Profile"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            />



</androidx.constraintlayout.widget.ConstraintLayout>